<style>
  .expandable-card {
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .expandable-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }

  .card-header {
    position: relative;
  }

  .expand-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-primary, #0a5c5c);
    transition: transform 0.3s ease;
    opacity: 0.6;
  }

  .expandable-card:hover .expand-btn {
    opacity: 1;
  }

  .expandable-card.expanded .expand-btn svg {
    transform: rotate(180deg);
  }

  .card-expanded-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
    padding: 0 1.5rem;
  }

  .expandable-card.expanded .card-expanded-content {
    max-height: 1000px;
    padding: 0 1.5rem 1.5rem 1.5rem;
    border-top: 1px solid #e5e7eb;
    margin-top: 1rem;
  }

  .card-expanded-content h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary, #0a5c5c);
    margin: 1rem 0 0.75rem 0;
  }

  .card-expanded-content ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card-expanded-content li {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
    color: #4b5563;
  }

  .card-expanded-content li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-accent, #f5b800);
    font-weight: bold;
  }

  .card-expanded-content li strong {
    color: #1f2937;
    font-weight: 600;
  }

  .detail-note {
    margin-top: 1rem;
    padding: 0.75rem 1rem;
    background: #f9fafb;
    border-left: 3px solid var(--color-accent, #f5b800);
    font-size: 0.875rem;
    color: #6b7280;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .expandable-card.expanded .card-expanded-content {
      max-height: 1500px;
    }

    .card-expanded-content li {
      font-size: 0.875rem;
      padding-left: 1.25rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.expandable-card');

    cards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Don't toggle if clicking on a link
        if ((e.target as HTMLElement).tagName === 'A') {
          return;
        }

        // Close other expanded cards
        cards.forEach(otherCard => {
          if (otherCard !== card && otherCard.classList.contains('expanded')) {
            otherCard.classList.remove('expanded');
          }
        });

        // Toggle current card
        card.classList.toggle('expanded');
      });
    });
  });
</script>
