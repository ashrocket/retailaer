    .toolbar-left, .toolbar-center, .toolbar-right {
      justify-content: center;
    }

    .edit-hint {
      font-size: 12px;
    }
  }
</style>

<script define:vars={{ filePath, isEditMode, hasEditorSession: !!editorSession }}>
  // Edit mode functionality
  const toggleBtn = document.getElementById('toggle-edit-mode');
  const saveBtn = document.getElementById('save-changes');
  const deployModal = document.getElementById('deployment-modal');
  const deployMessage = document.getElementById('deploy-message');
  const deploySuccess = document.getElementById('deploy-success');
  const deployError = document.getElementById('deploy-error');
  const deploymentLink = document.getElementById('deployment-link');
  const closeModalBtn = document.getElementById('close-modal');

  let hasChanges = false;
  const originalContent = new Map();

  // Add visual indicator to body when in edit mode
  if (isEditMode) {
    document.body.classList.add('edit-mode-active');
  }

  // Toggle edit mode
  toggleBtn?.addEventListener('click', () => {
    const url = new URL(window.location.href);
    if (isEditMode) {
      url.searchParams.delete('editMode');
    } else {
      url.searchParams.set('editMode', 'true');
    }
    window.location.href = url.toString();
  });

  // Make content editable in edit mode
  if (isEditMode) {
    // Wait for DOM to be fully loaded
    setTimeout(() => {
      // Select all text elements
      const elements = document.querySelectorAll('h1, h2, h3, h4, h5, h6, p, li, a.btn');
      console.log(`üîç Found ${elements.length} total elements to check`);

      let editableCount = 0;
      let skippedCount = 0;
      elements.forEach(el => {
        // Skip toolbar, navigation, footer, modals, etc.
        const skipReasons = [];
        if (el.closest('#edit-mode-toolbar')) skipReasons.push('toolbar');
        if (el.closest('.navbar')) skipReasons.push('navbar');
        if (el.closest('.footer')) skipReasons.push('footer');
        if (el.closest('#deployment-modal')) skipReasons.push('modal');
        if (el.closest('.edit-hint')) skipReasons.push('hint');
        if (!el.textContent?.trim()) skipReasons.push('empty');

        if (skipReasons.length > 0) {
          skippedCount++;
          return;
        }

        el.classList.add('editable-content');
        el.setAttribute('contenteditable', 'true');

        // Store original text content (not HTML)
        originalContent.set(el, el.textContent.trim());

        // Track changes
        el.addEventListener('input', () => {
          hasChanges = true;
          if (saveBtn) saveBtn.disabled = false;
        });

        editableCount++;
      });

      console.log(`‚úèÔ∏è Edit mode: ${editableCount} editable, ${skippedCount} skipped out of ${elements.length} total`);
      if (editableCount === 0 && elements.length > 0) {
        console.warn('‚ö†Ô∏è All elements were skipped!');
        console.log('First element:', elements[0]);
        console.log('  Tag:', elements[0].tagName);
        console.log('  Text:', elements[0].textContent?.substring(0, 50));
        console.log('  In navbar?', !!elements[0].closest('.navbar'));
        console.log('  In footer?', !!elements[0].closest('.footer'));
      }
    }, 100);
  }

  // Save changes
  saveBtn?.addEventListener('click', async () => {
    if (!hasChanges) return;

    saveBtn.disabled = true;
    deployModal.classList.remove('hidden');
    deployMessage.textContent = 'Collecting changes...';

    try {
      // Get all modified content (text only, not HTML)
      const changes = [];
      document.querySelectorAll('.editable-content').forEach(el => {
        const original = originalContent.get(el);
        const current = el.textContent.trim();
        if (original !== current) {
          changes.push({
            selector: getElementSelector(el),
            originalText: original,
            currentText: current
          });
        }
      });

      console.log(`Saving ${changes.length} changes to ${filePath}`);
      deployMessage.textContent = 'Committing to GitHub...';

      // Send changes to be applied directly to the .astro file
      const response = await fetch('/api/commit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          filePath: filePath,
          changes: changes,
          message: `Update ${filePath} via inline editor\n\nEdited ${changes.length} elements`
        })
      });

      if (!response.ok) {
        const errorData = await response.json();
        console.error('Commit API error:', errorData);
        throw new Error(`Commit failed: ${errorData.details || errorData.error || 'Unknown error'}`);
      }

      const result = await response.json();

      deployMessage.textContent = 'Deployment starting...';

      // Show success and start deployment checker
      setTimeout(() => {
        document.querySelector('.deploy-status').classList.add('hidden');
        deploySuccess.classList.remove('hidden');
        if (result.deployment?.url) {
          deploymentLink.href = result.deployment.url;
        }

        // Start checking deployment status
        checkDeploymentStatus(result.commit?.sha);
      }, 1000);

    } catch (error) {
      console.error('Save error:', error);
      document.querySelector('.deploy-status').classList.add('hidden');
      deployError.classList.remove('hidden');
      // Show error message to user
      const errorMsg = deployError.querySelector('p');
      if (errorMsg) {
        errorMsg.textContent = error.message || 'Failed to save changes. Check console for details.';
      }
    }
  });

  closeModalBtn?.addEventListener('click', () => {
    deployModal.classList.add('hidden');
    location.reload();
  });

  // Helper to get element selector
  function getElementSelector(el) {
    if (el.id) return `#${el.id}`;
    let path = [];
    while (el && el.tagName) {
      let selector = el.tagName.toLowerCase();
      if (el.className) {
        selector += '.' + el.className.split(' ').join('.');
      }
      path.unshift(selector);
      el = el.parentElement;
      if (path.length > 3) break;
    }
    return path.join(' > ');
  }

  // Check deployment status
  async function checkDeploymentStatus(commitSha) {
    const statusText = document.getElementById('deploy-status-text');
    const timerElement = document.getElementById('deploy-timer');
    const timerText = timerElement?.querySelector('span');
    const elapsedElement = document.getElementById('deploy-elapsed');

    const startTime = Date.now();
    let checkCount = 0;
    const maxChecks = 60; // Check for up to 5 minutes (60 checks * 5s = 300s)

    // Update elapsed time every second
    const elapsedInterval = setInterval(() => {
      const elapsed = Math.floor((Date.now() - startTime) / 1000);
      if (elapsedElement) {
        elapsedElement.textContent = `Elapsed: ${elapsed}s`;
      }
    }, 1000);

    const checkStatus = async () => {
      checkCount++;

      try {
        // Try fetching the homepage to see if deployment is complete
        // We add a cache-busting query param to avoid cached responses
        const checkUrl = `https://retailaer.us/?_deploy_check=${Date.now()}`;
        const response = await fetch(checkUrl, {
          method: 'HEAD',
          cache: 'no-cache'
        });

        // If we get a successful response, deployment is likely complete
        if (response.ok) {
          // Wait a bit longer to ensure full propagation
          setTimeout(() => {
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            clearInterval(elapsedInterval);

            if (statusText) {
              statusText.textContent = '‚úÖ Your changes are live!';
            }
            if (timerElement) {
              timerElement.classList.add('complete');
            }
            if (timerText) {
              timerText.textContent = `Deployed in ${elapsed}s`;
            }
            if (elapsedElement) {
              elapsedElement.textContent = `Deployment completed in ${elapsed}s`;
            }
          }, 3000);
          return;
        }
      } catch (err) {
        console.log('Deployment check:', err.message);
      }

      // Continue checking if we haven't exceeded max checks
      if (checkCount < maxChecks) {
        if (timerText) {
          timerText.textContent = `Checking deployment status... (${checkCount}/${maxChecks})`;
        }
        setTimeout(checkStatus, 5000); // Check every 5 seconds
      } else {
        clearInterval(elapsedInterval);
        if (statusText) {
          statusText.textContent = 'Deployment is taking longer than expected. Your changes should be live soon.';
        }
        if (timerElement) {
          timerElement.style.display = 'none';
        }
      }
    };

    // Start checking after initial delay
    setTimeout(checkStatus, 10000); // Wait 10s before first check
  }
</script>
