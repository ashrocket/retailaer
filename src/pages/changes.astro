---
import BaseLayout from '../layouts/BaseLayout.astro';

// Helper to get editor session
function getEditorSession(cookies: any) {
  const sessionCookie = cookies.get('editor_session')?.value;
  if (!sessionCookie) return null;

  try {
    const session = JSON.parse(atob(sessionCookie));
    // Check if session is expired
    if (session.exp < Date.now()) {
      return null;
    }
    return session;
  } catch {
    return null;
  }
}

// Check if user is logged in as an editor
const editorSession = getEditorSession(Astro.cookies);

if (!editorSession) {
  // Redirect to GitHub login
  return Astro.redirect('/api/auth/github?returnTo=/changes');
}

// Fetch recent commits from GitHub
const owner = 'ashrocket';
const repo = 'retailaer';
const branch = 'main';

let commits = [];
let error = null;

try {
  const response = await fetch(
    `https://api.github.com/repos/${owner}/${repo}/commits?sha=${branch}&per_page=50`,
    {
      headers: {
        'Accept': 'application/vnd.github.v3+json',
        'User-Agent': 'Retailaer-Site-Editor',
      },
    }
  );

  if (response.ok) {
    commits = await response.json();
  } else {
    error = `Failed to fetch commits: ${response.status}`;
  }
} catch (err) {
  error = err.message;
}
---

<BaseLayout title="Recent Changes - Retailaer">
  <section class="changes-page">
    <div class="container">
      <div class="changes-header">
        <h1>Recent Changes</h1>
        <p class="subtitle">View all changes made to the site</p>
        <div class="editor-info">
          Logged in as <strong>{editorSession.name}</strong>
          <a href="/" class="btn-link">‚Üê Back to Site</a>
        </div>
      </div>

      {error && (
        <div class="error-message">
          <p>Error loading changes: {error}</p>
        </div>
      )}

      {!error && commits.length > 0 && (
        <div class="commits-list">
          {commits.map((commit) => {
            const isInlineEdit = commit.commit.message.includes('via inline editor');
            const date = new Date(commit.commit.author.date);
            const timeAgo = getTimeAgo(date);

            return (
              <div class:list={['commit-item', { 'inline-edit': isInlineEdit }]}>
                <div class="commit-header">
                  <span class="commit-icon">
                    {isInlineEdit ? '‚úèÔ∏è' : 'üíæ'}
                  </span>
                  <div class="commit-info">
                    <h3 class="commit-message">{commit.commit.message.split('\n')[0]}</h3>
                    <div class="commit-meta">
                      <span class="author">
                        {commit.commit.author.name}
                      </span>
                      <span class="separator">‚Ä¢</span>
                      <span class="time" title={date.toLocaleString()}>
                        {timeAgo}
                      </span>
                      <span class="separator">‚Ä¢</span>
                      <a href={commit.html_url} target="_blank" class="commit-sha">
                        {commit.sha.substring(0, 7)}
                      </a>
                    </div>
                  </div>
                </div>
                {commit.commit.message.split('\n').slice(1).filter(line => line.trim()).length > 0 && (
                  <div class="commit-body">
                    {commit.commit.message.split('\n').slice(1).filter(line => line.trim()).map(line => (
                      <p>{line}</p>
                    ))}
                  </div>
                )}
              </div>
            );
          })}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

