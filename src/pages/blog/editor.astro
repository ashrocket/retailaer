    // Update carousel preview live
    const titleInput = document.getElementById('title') as HTMLInputElement;
    const previewTitleInput = document.getElementById('preview-title') as HTMLInputElement;
    const previewExcerptInput = document.getElementById('preview-excerpt') as HTMLTextAreaElement;
    const previewMetaSelect = document.getElementById('preview-meta') as HTMLSelectElement;
    const previewIconSelect = document.getElementById('preview-icon') as HTMLSelectElement;
    const previewGradientSelect = document.getElementById('preview-gradient') as HTMLSelectElement;

    const carouselCard = document.getElementById('carousel-card-preview');
    const previewTitleDisplay = document.getElementById('preview-title-display');
    const previewExcerptDisplay = document.getElementById('preview-excerpt-display');
    const previewBadgeDisplay = document.getElementById('preview-badge-display');
    const previewIconDisplay = document.getElementById('preview-icon-display');

    function updateCarouselPreview() {
      // Update title (use custom or fallback to main title)
      const displayTitle = previewTitleInput?.value || titleInput?.value || 'Your article title';
      if (previewTitleDisplay) {
        previewTitleDisplay.textContent = displayTitle;
      }

      // Update excerpt
      const displayExcerpt = previewExcerptInput?.value || 'Your preview excerpt will appear here...';
      if (previewExcerptDisplay) {
        previewExcerptDisplay.textContent = displayExcerpt;
      }

      // Update badge
      if (previewBadgeDisplay && previewMetaSelect) {
        previewBadgeDisplay.textContent = previewMetaSelect.value;
      }

      // Update icon
      if (previewIconDisplay && previewIconSelect) {
        previewIconDisplay.innerHTML = iconMap[previewIconSelect.value] || iconMap['plane'];
      }

      // Update gradient
      if (carouselCard && previewGradientSelect) {
        carouselCard.style.background = previewGradientSelect.value;
      }
    }

    // Attach listeners
    titleInput?.addEventListener('input', updateCarouselPreview);
    previewTitleInput?.addEventListener('input', updateCarouselPreview);
    previewExcerptInput?.addEventListener('input', updateCarouselPreview);
    previewMetaSelect?.addEventListener('change', updateCarouselPreview);
    previewIconSelect?.addEventListener('change', updateCarouselPreview);
    previewGradientSelect?.addEventListener('change', updateCarouselPreview);

    // Shared publish/save function
    async function savePost(status: 'draft' | 'published') {
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const content = (document.getElementById('editor') as HTMLElement).innerHTML;
      const coverSrc = (document.getElementById('cover-preview') as HTMLImageElement).src;

      if (!title || !content) {
        alert('Please add a title and content before saving.');
        return;
      }

      // Collect carousel preview data
      const carouselPreview = {
        title: previewTitleInput?.value || title,
        excerpt: previewExcerptInput?.value || '',
        meta: previewMetaSelect?.value || 'ARTICLE',
        icon: previewIconSelect?.value || 'plane',
        backgroundGradient: previewGradientSelect?.value || 'linear-gradient(135deg, #FFF5E6 0%, #FFE4CC 100%)'
      };

      // Get existing post ID from localStorage draft if editing
      const draft = localStorage.getItem('article-draft');
      const draftData = draft ? JSON.parse(draft) : {};

      const postData = {
        title,
        content,
        status,
        carouselPreview,
        coverImage: coverSrc && !coverSrc.includes('undefined') ? coverSrc : undefined,
        excerpt: carouselPreview.excerpt,
        id: draftData.id, // Will be undefined for new posts
        createdAt: draftData.createdAt,
        publishedAt: draftData.publishedAt,
      };

      // Show loading state
      const publishBtn = document.getElementById('publish-btn') as HTMLButtonElement;
      const saveBtn = document.getElementById('save-draft') as HTMLButtonElement;
      const activeBtn = status === 'published' ? publishBtn : saveBtn;
      const originalText = activeBtn.innerHTML;

      activeBtn.innerHTML = status === 'published' ? 'Publishing...' : 'Saving...';
      activeBtn.disabled = true;

      try {
        const response = await fetch('/api/blog/publish', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(postData),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Failed to save');
        }

        // Update localStorage with the saved post info
        localStorage.setItem('article-draft', JSON.stringify({
          ...draftData,
          id: result.id,
          title,
          content,
          cover: postData.coverImage,
          carouselPreview,
          createdAt: result.post?.createdAt || draftData.createdAt,
          timestamp: Date.now(),
        }));

        // Show success message
        if (status === 'published') {
          alert(`Post published successfully!\n\nIt will be live at:\n${result.post.url}\n\n(Deploys in 1-2 minutes)`);
        } else {
          // Show saved indicator
          const saveText = saveBtn?.querySelector('.save-text');
          if (saveText) {
            saveText.textContent = 'Saved!';
            saveBtn?.classList.add('saved');
            setTimeout(() => {
              saveText.textContent = 'Save Draft';
              saveBtn?.classList.remove('saved');
            }, 2000);
          }

          // Show share link notification
          const shareUrl = `${window.location.origin}/blog/draft/${result.id}`;
          showShareNotification(shareUrl);
        }

        console.log('Saved:', result);

      } catch (error) {
        console.error('Save error:', error);
        alert(`Failed to ${status === 'published' ? 'publish' : 'save'}: ${error instanceof Error ? error.message : 'Unknown error'}`);
      } finally {
        activeBtn.innerHTML = originalText;
        activeBtn.disabled = false;
      }
    }

    // Save Draft button - now commits to GitHub as draft
    document.getElementById('save-draft')?.addEventListener('click', async (e) => {
      e.preventDefault();
      await savePost('draft');
    });

    // Publish button
    document.getElementById('publish-btn')?.addEventListener('click', async () => {
      await savePost('published');
    });

    // Share notification functions
    function showShareNotification(url: string) {
      const notification = document.getElementById('share-notification');
      const input = document.getElementById('share-link-input') as HTMLInputElement;

      if (notification && input) {
        input.value = url;
        notification.classList.remove('hidden');
      }
    }

    function hideShareNotification() {
      const notification = document.getElementById('share-notification');
      notification?.classList.add('hidden');
    }

    // Close share notification
    document.getElementById('close-share-notification')?.addEventListener('click', hideShareNotification);

    // Copy share link
    document.getElementById('copy-share-link')?.addEventListener('click', async () => {
      const input = document.getElementById('share-link-input') as HTMLInputElement;
      const btn = document.getElementById('copy-share-link') as HTMLButtonElement;

      if (input && btn) {
        await navigator.clipboard.writeText(input.value);
        btn.textContent = 'Copied!';
        btn.classList.add('copied');

        setTimeout(() => {
          btn.textContent = 'Copy';
          btn.classList.remove('copied');
        }, 2000);
      }
    });

    // Auto-hide share notification after 30 seconds
    const shareNotification = document.getElementById('share-notification');
    if (shareNotification) {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.attributeName === 'class' && !shareNotification.classList.contains('hidden')) {
            setTimeout(() => {
              hideShareNotification();
            }, 30000);
          }
        });
      });
      observer.observe(shareNotification, { attributes: true });
    }
