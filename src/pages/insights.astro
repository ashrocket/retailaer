---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

export const prerender = true;

// Dynamically import all blog posts ‚Äî new posts appear automatically after deploy
const blogModules = import.meta.glob('../content/blog/*.json', { eager: true });
const allPosts = Object.values(blogModules).map((m: any) => m.default || m);

// Calculate read time (approx 200 words per minute)
function getReadTime(content: string): number {
  const words = content?.split(/\s+/).length || 0;
  return Math.max(1, Math.ceil(words / 200));
}

// Get icon name based on post type
function getTypeIcon(type: string): string {
  switch (type?.toUpperCase()) {
    case 'LINKEDIN POST': return 'mdi:linkedin';
    case 'ARTICLE': return 'lucide:file-text';
    case 'BLOG POST': return 'lucide:pen-line';
    case 'REPORT': return 'lucide:bar-chart-2';
    case 'GUIDE': return 'lucide:book-open';
    case 'CASE STUDY': return 'lucide:briefcase';
    case 'PRESS': return 'lucide:newspaper';
    case 'NEWS': return 'lucide:megaphone';
    default: return 'lucide:file-text';
  }
}

// Get display label for type
function getTypeLabel(type: string): string {
  if (type?.toUpperCase() === 'LINKEDIN POST') return '';
  return type || 'ARTICLE';
}

// Process and filter published posts
const posts = allPosts
  .filter(post => post && post.status === 'published')
  .sort((a, b) => new Date(b.publishedAt || b.updatedAt).getTime() - new Date(a.publishedAt || a.updatedAt).getTime());
---

<BaseLayout
  title="Insights - Airline Retailing & Travel Tech | Retailaer"
  description="Expert insights on airline retailing, travel technology, and the future of customer-first commerce."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <h1 class="page-title">Insights</h1>
      <p class="page-subtitle">
        Expert perspectives on airline retailing, travel technology,<br>
        and the future of customer-first commerce.
      </p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="section">
    <div class="container">
      {posts.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">üìù</div>
          <h2>More Insights Coming Soon</h2>
          <p>
            We're working on publishing valuable insights about airline retailing,
            travel technology trends, and customer-first strategies.
          </p>
          <p class="empty-cta">
            In the meantime, <a href="/contact">get in touch</a> to learn more about
            how Retailaer can transform your airline retailing strategy.
          </p>
        </div>
      ) : (
        <div class="insights-grid">
          {posts.map(post => (
            <article class="insight-card">
              {post.coverImage && (
                <div class="insight-image">
                  <img src={post.coverImage} alt={post.title} />
                </div>
              )}
              <div class="insight-content">
                <div class="insight-meta">
                  <span class={`insight-badge ${post.type?.toUpperCase() === 'LINKEDIN POST' ? 'linkedin-badge' : ''}`}>
                    <Icon name={getTypeIcon(post.type)} />
                    {getTypeLabel(post.type) && <span>{getTypeLabel(post.type)}</span>}
                  </span>
                  <div class="insight-meta-right">
                    <span class="read-time">{getReadTime(post.content)} min read</span>
                    <time datetime={post.publishedAt || post.updatedAt}>
                      {new Date(post.publishedAt || post.updatedAt).toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                </div>

                <h2 class="insight-title">
                  <a href={`/blog/${post.slug}`}>{post.title}</a>
                </h2>

                {post.excerpt && (
                  <p class="insight-excerpt" set:html={post.excerpt} />
                )}

                <div class="insight-footer">
                  <span class="insight-author">By {post.author}</span>
                  <a href={`/blog/${post.slug}`} class="read-more">
                    Read Article ‚Üí
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Topics Section -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>Topics We Cover</h2>
      </div>

      <div class="topics-grid">
        <div class="topic-card">
          <div class="topic-icon">‚úàÔ∏è</div>
          <h3>Airline Retailing</h3>
          <p>Modern strategies for maximizing revenue and customer satisfaction</p>
        </div>

        <div class="topic-card">
          <div class="topic-icon">
            <Icon name="lucide:target" />
          </div>
          <h3>Personalization</h3>
          <p>Leveraging data and AI to deliver tailored experiences</p>
        </div>

        <div class="topic-card">
          <div class="topic-icon">
            <Icon name="lucide:repeat" />
          </div>
          <h3>NDC & Distribution</h3>
          <p>Navigating the evolution of airline distribution channels</p>
        </div>

        <div class="topic-card">
          <div class="topic-icon">üí≥</div>
          <h3>Payments & Commerce</h3>
          <p>Streamlining transactions and improving conversion</p>
        </div>

        <div class="topic-card">
          <div class="topic-icon">
            <Icon name="lucide:bar-chart-3" />
          </div>
          <h3>Data & Analytics</h3>
          <p>Making data-driven decisions to optimize performance</p>
        </div>

        <div class="topic-card">
          <div class="topic-icon">
            <Icon name="lucide:rocket" />
          </div>
          <h3>Innovation</h3>
          <p>Emerging technologies shaping the future of travel</p>
        </div>
      </div>
    </div>
  </section>

  <style>
    .page-hero {
      background: var(--gradient-hero, linear-gradient(135deg, #2b3b4f 0%, #00baa3 100%));
      padding: 120px 0 80px;
      text-align: center;
      color: white;
    }

    .page-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      letter-spacing: -1px;
      color: white;
    }

    .page-subtitle {
      font-size: 1.25rem;
      line-height: 1.6;
      max-width: 700px;
      margin: 0 auto;
      color: #ffffff;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .section {
      padding: 80px 0;
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-header h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--color-gray-900, #2b3b4f);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      max-width: 600px;
      margin: 4rem auto;
      padding: 3rem 2rem;
    }

    .empty-icon {
      font-size: 4rem;
      margin-bottom: 1.5rem;
      opacity: 0.5;
    }

    .empty-state h2 {
      font-size: 2rem;
      font-weight: 600;
      color: var(--color-gray-900, #2b3b4f);
      margin-bottom: 1rem;
    }

    .empty-state p {
      font-size: 1.125rem;
      color: var(--color-gray-400, #787a7a);
      line-height: 1.7;
      margin-bottom: 1rem;
    }

    .empty-cta {
      margin-top: 1.5rem;
    }

    .empty-cta a {
      color: var(--color-teal-light, #00baa3);
      font-weight: 600;
      text-decoration: none;
      border-bottom: 2px solid var(--color-yellow-primary, #ffb061);
    }

    .empty-cta a:hover {
      color: var(--color-teal-dark, #2b3b4f);
    }

    /* Insights Grid */
    .insights-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
    }

    .insight-card {
      background: #ffffff;
      border-radius: 20px;
      overflow: hidden;
      border: 2px solid #e5e7eb;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      flex-direction: column;
    }

    .insight-card:nth-child(even) {
      background: #f8fafa;
    }

    .insight-card:hover {
      border-color: var(--color-teal-light, #00baa3);
      box-shadow: 0 8px 24px rgba(0, 186, 163, 0.15);
      transform: translateY(-4px);
    }

    /* Gradient header for cards without images */
    .insight-card-header {
      height: 8px;
      background: linear-gradient(90deg, #2b3b4f 0%, #00baa3 100%);
      border-radius: 18px 18px 0 0;
    }

    .insight-image {
      width: 100%;
      height: 220px;
      overflow: hidden;
    }

    .insight-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .insight-card:hover .insight-image img {
      transform: scale(1.05);
    }

    .insight-content {
      padding: 28px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .insight-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
    }

    .insight-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      color: var(--color-teal-dark, #2b3b4f);
      font-weight: 700;
      text-transform: uppercase;
      font-size: 11px;
      letter-spacing: 1.2px;
    }

    .insight-badge [data-icon] {
      width: 14px;
      height: 14px;
    }

    .insight-badge.linkedin-badge {
      background: #0077b5;
      color: white;
      padding: 0.375rem 0.625rem;
      border-radius: 20px;
    }

    .insight-badge.linkedin-badge [data-icon] {
      width: 16px;
      height: 16px;
    }

    .insight-meta-right {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--color-gray-400, #787a7a);
      font-size: 0.8rem;
    }

    .insight-title {
      font-size: 22px;
      font-weight: 700;
      line-height: 1.3;
      margin-bottom: 12px;
    }

    .insight-title a {
      color: var(--color-gray-900, #2b3b4f);
      text-decoration: none;
      transition: color 0.2s;
    }

    .insight-title a:hover {
      color: var(--color-teal-light, #00baa3);
    }

    .insight-excerpt {
      color: #4b5563;
      line-height: 1.6;
      font-size: 15px;
      margin-bottom: 1.5rem;
      flex: 1;
    }

    .insight-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid #e5e7eb;
    }

    .insight-author {
      color: var(--color-gray-400, #787a7a);
      font-size: 0.875rem;
    }

    .read-more {
      color: var(--color-teal-light, #00baa3);
      font-weight: 600;
      text-decoration: none;
      font-size: 0.875rem;
      transition: color 0.2s;
    }

    .read-more:hover {
      color: var(--color-teal-dark, #2b3b4f);
    }

    /* Topics */
    .topics-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .topic-card {
      background: white;
      padding: 2rem;
      border-radius: 20px;
      border: 2px solid #e5e7eb;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
      text-align: center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .topic-card:hover {
      border-color: var(--color-teal-light, #00baa3);
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 186, 163, 0.12);
    }

    .topic-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .topic-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-teal-dark, #2b3b4f);
      margin-bottom: 0.75rem;
    }

    .topic-card p {
      color: var(--color-gray-400, #787a7a);
      line-height: 1.6;
      font-size: 0.9375rem;
    }

    @media (max-width: 968px) {
      .insights-grid {
        grid-template-columns: 1fr;
      }

      .page-title {
        font-size: 2.5rem;
      }
    }

    @media (max-width: 640px) {
      .page-hero {
        padding: 100px 0 60px;
      }

      .section {
        padding: 60px 0;
      }

      .insight-content {
        padding: 20px;
      }
    }
  </style>
</BaseLayout>
